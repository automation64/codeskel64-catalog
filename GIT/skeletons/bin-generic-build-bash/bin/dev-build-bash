#!/usr/bin/env bash
#
# Assemble modular script
#
# * Use to build script from multiple sources (modular)
# * Template: 2.0.0
#

#
# Imports
#

# shellcheck source=SCRIPTDIR/dev-set
source ./bin/dev-set || exit 1
# shellcheck source=SCRIPTDIR/../lib/bl64/bashlib64-core.bash
source "${DEV_CICD_BASHLIB64}/bashlib64-core.bash" || exit 1

export DEV_CICD_DEBUG="${DEV_CICD_DEBUG:-}"

#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_check_export 'DEV_BUILD_FULL_PATH' &&
  bl64_check_export 'DEV_BUILD_NAME' &&
  bl64_check_export 'DEV_SRC' ||
  exit $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'build-app'
# shellcheck disable=SC2154
bl64_msg_show_task "Build app (${DEV_BUILD_NAME})"
bl64_fs_merge_files \
  '0755' \
  "$BL64_VAR_DEFAULT" \
  "$BL64_VAR_DEFAULT" \
  "$BL64_VAR_ON" \
  "$DEV_BUILD_FULL_PATH" \
  "${DEV_SRC}/header.bash" \
  "$DEV_CICD_BASHLIB64" \
  "${DEV_SRC}/env.bash" \
  "${DEV_SRC}/functions.bash" \
  "${DEV_SRC}/main.bash"
bl64_msg_show_batch_finish $? 'build-app'
