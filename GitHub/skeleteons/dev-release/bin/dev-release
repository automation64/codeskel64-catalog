#!/usr/bin/env bash
#
# Release application version
#
# * Template: 1.0.0
#

#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || exit 1
# shellcheck source=lib/bl64/bashlib64-core.bash
source "${DEV_CICD_BASHLIB64}/bashlib64-core.bash" || exit 1

#
# Functions
#

function dev_release() {
  bl64_dbg_app_show_function
  bl64_msg_show_task "Release application"
  # X_FUNCTION_PLACEHOLDER_X
}

#
# Main
#

declare dev_release_tag="$1"

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_check_parameter 'dev_release_tag' ||
  return $?

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'release'
dev_release
bl64_msg_show_batch_finish $? 'release'
